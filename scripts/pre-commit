#!/usr/bin/env bash
#
# Pre-commit hook that runs the same checks as GitHub CI.
# Install with: ./scripts/install-hooks.sh
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ğŸ” Running pre-commit checks...${NC}"
echo

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo -e "${RED}âŒ cargo not found. Please install Rust.${NC}"
    exit 1
fi

# 1. Format check
echo -e "${YELLOW}ğŸ“ Checking formatting (cargo fmt)...${NC}"
if ! cargo fmt -- --check; then
    echo
    echo -e "${RED}âŒ Formatting check failed!${NC}"
    echo -e "   Run ${GREEN}cargo fmt${NC} to fix formatting issues."
    exit 1
fi
echo -e "${GREEN}   âœ“ Formatting OK${NC}"
echo

# 2. Clippy lint check
echo -e "${YELLOW}ğŸ” Running clippy lints...${NC}"
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo
    echo -e "${RED}âŒ Clippy check failed!${NC}"
    echo -e "   Fix the warnings above before committing."
    exit 1
fi
echo -e "${GREEN}   âœ“ Clippy OK${NC}"
echo

# 3. Tests
echo -e "${YELLOW}ğŸ§ª Running tests...${NC}"
if ! cargo test --all-targets --all-features; then
    echo
    echo -e "${RED}âŒ Tests failed!${NC}"
    echo -e "   Fix failing tests before committing."
    exit 1
fi
echo -e "${GREEN}   âœ“ Tests OK${NC}"
echo

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"

